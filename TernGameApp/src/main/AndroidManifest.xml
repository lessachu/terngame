<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.twitter.terngame"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="9"
            android:targetSdkVersion="19"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <receiver
                android:name=".util.HintNotification"
                android:enabled="true">
            <intent-filter>
                <action android:name="com.twitter.terngame.SEND_HINT"/>
            </intent-filter>
        </receiver>

        <activity
                android:name=".StartActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:screenOrientation="portrait"
                android:launchMode="singleTop">
        </activity>
        <activity
                android:name=".PuzzleActivity"
                android:screenOrientation="portrait"
                android:launchMode="singleTop">
        </activity>

        <activity
                android:name="com.twitter.terngame.GuessActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.twitter.terngame.GuessLogActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.twitter.terngame.AdminActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.twitter.terngame.StatusActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.twitter.terngame.HintListActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.twitter.terngame.HintActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.twitter.terngame.TwittermonActivity"
                android:screenOrientation="portrait"
                android:launchMode="singleTop">
        </activity>
        <activity
                android:name="com.twitter.terngame.TwittermonCollectFailActivity"
                android:screenOrientation="portrait"
                android:launchMode="singleTop">
        </activity>
    </application>

</manifest>
