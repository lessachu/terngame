<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/battle_title"
            android:id="@+id/battle_title"
            style="textHeadingTheme"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/battle_bar_layout">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/creature_layout"
                android:layout_gravity="left">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twittermon_image"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_title"
                    android:singleLine="false"
                    style="statusTheme"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vs_text"
                android:text="@string/versus"
                android:singleLine="false"
                style="statusTheme"
                android:layout_gravity="center"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/opponent_layout"
                android:layout_gravity="right">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opponent_image"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opponent_title"
                    android:singleLine="false"
                    style="statusTheme"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battle_instructions"
            android:id="@+id/battle_instruction"
            style="@style/instructionTheme"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_button"
            android:id="@+id/select_button"
            style="@style/ButtonTheme"/>

    <Button
            style="@style/ButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fight_button_text"
            android:id="@+id/fight_button"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>

</LinearLayout>