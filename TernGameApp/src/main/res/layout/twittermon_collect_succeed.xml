<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/collect_success"
            android:id="@+id/collect_success_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            style="@style/statusTheme"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twittermon_image"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/collection_button_text"
            android:id="@+id/goto_collection_button"
            android:clickable="false"/>
</LinearLayout>