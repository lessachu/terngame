<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/twittermon_image"
            android:src="@drawable/drake"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twittermon_text"
            android:layout_alignLeft="@+id/twittermon_image"
            android:layout_alignRight="@+id/twittermon_image"
            android:layout_alignBottom="@+id/twittermon_image"
            android:layout_marginBottom="20dp"
            android:background="#BFFFFFFF"
            android:text="test"
            style="@style/twittermonNameTheme"/>

</RelativeLayout>
