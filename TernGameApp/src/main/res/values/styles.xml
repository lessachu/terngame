<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="hintTitleTheme">
        <item name="android:gravity">center</item>
    </style>

    <style name="statusRowTheme">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="eventTitleTheme">
        <item name="android:textColor">@color/event_title_color</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="textHeadingTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="statusTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="puzzleStatusTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/puzzle_status_color</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="twittermonNameTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/twittermon_name_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="instructionTheme">
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="textEditTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@color/event_title_color</item>
    </style>

    <style name="ButtonTheme" parent="android:Theme.Holo.Light"/>

    <style name="StatusButtonTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/status_btn_default_dark</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>
